// Q - 1
#include <iostream>
using namespace std;


int main() {
    int a = 10;
    int *ptr = &a;
    cout << a << endl;
    cout << *ptr << endl;
    return 0;
}

// Q - 2
#include <iostream>
using namespace std;


int main() {
    int a[] = {1,7,8,5,6,9,8,7,2, 7};
    for (int i = 0; i < 10; i++){
        cout << *(a + i) << " ";
    }
    return 0;
}

// Q - 3
#include <iostream>
using namespace std;


int main() {
    int a = 10;
    int *ptr = &a;
    int **ptr1 = &ptr;
    
    cout << a << endl;
    cout << *ptr << endl;
    cout << **ptr1 << endl;
    return 0;
}
