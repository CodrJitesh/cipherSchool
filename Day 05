// Q - 1
#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "Enter a number: ";
    cin >> n;
    
    if (n % 2 == 0){
        cout << "Even";
    }else{
        cout << "Odd";
    }
    return 0;
}

// Q - 2
#include <iostream>
using namespace std;

int main() {
    string str;
    cout << "Enter a String: ";
    cin >> str;
    
    cout << "Reversed String: "; 
    for (int i = str.size() - 1; i >= 0; i--){
        cout << str[i];
    }
    return 0;
}

// Q - 3
#include <iostream>
using namespace std;

int main() {
    string str;
    cout << "Enter a String: ";
    int vowels = 0;
    cin >> str;
    
    for (int i = 0; i < str.size(); i++){
        if(str[i]=='a'|| str[i]=='e'||str[i]=='i'||str[i]=='o'||str[i]=='u'){
		    vowels++;
        }
    }
    
    cout << "Number of vowels: " << vowels << endl; 
    cout << "Number of consonents: " << str.size() - vowels; 
    return 0;
}
