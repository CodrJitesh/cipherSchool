// Q - 1
#include <iostream>
using namespace std;

int main() {
    string str1, str2;
    cout << "Enter the first string: ";
    cin >> str1;
    cout << "Enter the second string: ";
    cin >> str2;
    cout << "Concatenated string: ";
    cout << str1 + str2;

    return 0;
}

// Q - 2
#include <iostream>
using namespace std;

int main() {
    float a, b, c, d, e;
    
    cout << "Enter grade 1: ";
    cin >> a;
    
    cout << "Enter grade 2: ";
    cin >> b;
    
    cout << "Enter grade 3: ";
    cin >> c;
    
    cout << "Enter grade 4: ";
    cin >> d;
    
    cout << "Enter grade 5: ";
    cin >> e;
    
    cout << "The average grade is: " << (a + b + c + d + e) / 5;
    
    return 0;
}

// Q - 3
#include <iostream>
using namespace std;

int main() {
    int a;
    
    cout << "Enter a number: ";
    cin >> a;

    cout << "The square of " << a <<" is: " << a * a;

    return 0;
}
